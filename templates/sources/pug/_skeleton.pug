	body
		
		.preloader
			.preloader-body
				.cssload-container: .cssload-speeding-wheel
				p Loading...
		
		// Page
		div(class="page text-center")
			block page
		
		// Global Mailform Output
		#form-output-global.snackbars
		
		include sections/_modal
		
